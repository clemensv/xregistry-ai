{
  "routes": [
    {
      "route": "/registry",
      "rewrite": "/registry/index.json"
    },
    {
      "route": "/registry/mcpproviders",
      "rewrite": "/registry/mcpproviders/index.json"
    },
    {
      "route": "/registry/agentcardproviders",
      "rewrite": "/registry/agentcardproviders/index.json"
    },
    {
      "route": "/registry/mcpproviders/*/servers",
      "rewrite": "/registry/mcpproviders/{provider}/servers/index.json"
    },
    {
      "route": "/registry/agentcardproviders/*/agentcards",
      "rewrite": "/registry/agentcardproviders/{provider}/agentcards/index.json"
    },
    {
      "route": "/*",
      "headers": {
        "Strict-Transport-Security": "max-age=31536000; includeSubDomains"
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/assets/*", "/registry/*"]
  },
  "globalHeaders": {
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET, OPTIONS, POST, PUT, PATCH, DELETE",
    "Access-Control-Allow-Headers": "Content-Type, Authorization"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".html": "text/html"
  }
} 